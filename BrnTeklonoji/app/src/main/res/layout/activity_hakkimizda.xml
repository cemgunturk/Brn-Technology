<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hakkimizda">

    <TextView
        android:id="@+id/hakkimizda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_style"
        android:gravity="center"
        android:text="Hakkımızda"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/hakkimizda1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hakkimizda"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="BRN Teknoloji 2017 yılında İTOB Organize Sanayi Bölgesi Bünyesinde bulunan Bilimpark içerisinde kurulmuştur. Sahip olduğu Biyomühendis, Mekatronik, Elektrik/Elektronik, Makine ve İnşaat Mühendislerinden oluşun zengin mühendis takımı ile sağlık, talaşlı imalat, yazılım ve inşaat sektörlerinde vermiş olduğu AR GE hizmetlerinin yanı sıra aynı bölge içerisinde, sahip olduğu ve aktif kullanıdğı 1500 m2'lik üretim alanı ile üretim ihtiyaçlarınıza çözüm ortağı olmayı hedeflemektedir."
        android:textColor="#000000"
        android:textSize="17dp"/>

    <ImageView
        android:id="@+id/hakkimizdaFoto"
        android:layout_width="wrap_content"
        android:layout_below="@+id/hakkimizda1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/hakkimizda"></ImageView>

</RelativeLayout>